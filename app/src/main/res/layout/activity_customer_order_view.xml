<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page">


    <TextView
        android:id="@+id/text_update"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="106dp"
        android:gravity="center"
        android:text="Update Order"
        android:textColor="@color/white"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/update_order_qty"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text_update"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:background="#D6D3D3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Quantity"
        android:textColor="#555454" />

    <EditText
        android:id="@+id/update_order_name"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@+id/update_order_qty"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:background="#D6D3D3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name of the Customer"
        android:textColor="#555454" />

    <EditText
        android:id="@+id/update_order_email"
        android:layout_width="262dp"
        android:layout_height="50dp"
        android:layout_below="@+id/update_order_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:background="#D6D3D3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email"
        android:textColor="#555454" />

    <EditText
        android:id="@+id/update_order_date"
        android:layout_width="264dp"
        android:layout_height="50dp"
        android:layout_below="@+id/update_order_email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:background="#D6D3D3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Date"
        android:textColor="#555454" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update_order_btn"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_order_date"
        android:layout_alignParentStart="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/round_button"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_order_btn"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_order_btn"
        android:layout_alignStart="@+id/update_order_btn"
        android:layout_alignEnd="@+id/update_order_btn"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/round_button"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_order_btn"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm_order_btn"
        android:layout_alignStart="@+id/confirm_order_btn"
        android:layout_alignEnd="@+id/confirm_order_btn"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/round_button"
        android:text="Delete"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>