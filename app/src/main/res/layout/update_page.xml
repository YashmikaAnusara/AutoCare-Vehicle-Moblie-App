<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/papers_co_ad74_bmw_car_black_light_41_iphone_wallpaper">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/UpdateButton"
        android:layout_width="153dp"
        android:layout_height="37dp"
        android:layout_below="@+id/UpdateQuntity"
        android:layout_alignStart="@+id/UpdateQuntity"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/submit_button_style"
        android:text="Update"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/UpdateName"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/inputs"
        android:hint="Item Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white">

    </EditText>

    <EditText
        android:id="@+id/UpdateQuntity"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpdatePrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/inputs"
        android:hint="@string/addquantity"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white">

    </EditText>

    <EditText
        android:id="@+id/UpdatePrice"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpdateName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/inputs"
        android:hint="Item Price"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white">

    </EditText>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:text="@string/UpdateQuantityDS"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="169dp"
        android:text="Update Item"
        android:textColor="@color/white"
        android:textSize="20sp" />
</RelativeLayout>