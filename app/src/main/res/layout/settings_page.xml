<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lamborghini">


    <EditText
        android:id="@+id/SName"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView76"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/inputs"
        android:hint="Supplier Name"
        android:includeFontPadding="false"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white">

    </EditText>

    <TextView
        android:id="@+id/textView76"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView72"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="22dp"
        android:text="Supplier Name"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SSubmit"
        android:layout_width="138dp"
        android:layout_height="35dp"
        android:layout_below="@+id/SNumber"
        android:layout_alignStart="@+id/SNumber"
        android:layout_marginStart="0dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/submit_button_style"
        android:text="Update"
        android:textColor="#F8F5F5"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView79"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SPassword"
        android:layout_alignStart="@+id/SPassword"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="@string/number"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView78"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SEmail"
        android:layout_alignStart="@+id/SPassword"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:text="Supplier Password"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/SNumber"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SPassword"
        android:layout_alignStart="@+id/SPassword"
        android:layout_alignEnd="@+id/SPassword"
        android:layout_marginStart="0dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/inputs"
        android:hint="Phone number"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white">

    </EditText>

    <EditText
        android:id="@+id/SEmail"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SName"
        android:layout_alignStart="@+id/SName"
        android:layout_alignEnd="@+id/SName"
        android:layout_marginStart="0dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/inputs"
        android:hint="Suplier Email"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white">

    </EditText>

    <TextView
        android:id="@+id/textView77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SName"
        android:layout_alignStart="@+id/SPassword"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="Supplier Email"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView74"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SName"
        android:layout_below="@+id/textView70"
        android:layout_alignStart="@+id/SName"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="109dp"
        android:layout_marginBottom="22dp"
        android:text="@string/image"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView70"
        android:layout_alignStart="@+id/textView70"
        android:layout_marginStart="0dp"
        android:layout_marginTop="19dp"
        android:text="Suppler Details"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/SPassword"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SEmail"
        android:layout_alignStart="@+id/SEmail"
        android:layout_alignEnd="@+id/SEmail"
        android:layout_marginStart="0dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/inputs"
        android:hint="Supplier Password"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white">

    </EditText>

    <TextView
        android:id="@+id/textView69"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="169dp"
        android:text="Supplier Profile"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView69"
        android:layout_alignStart="@+id/textView69"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:text="@string/SettingsDS"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#7B32F4"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

</RelativeLayout>