<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/OrderAddBtn"
        android:layout_width="153dp"
        android:layout_height="37dp"
        android:layout_below="@+id/cusDate"
        android:layout_alignStart="@+id/cusDate"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/submit_button_style"
        android:text="Confirm"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/CusItemID"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="71dp"
        android:background="#A5A5A5"
        android:hint="Item Code"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black">

    </EditText>

    <EditText
        android:id="@+id/CusItemName"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CusItemID"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="71dp"
        android:background="#A5A5A5"
        android:hint="Item Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black">

    </EditText>

    <EditText
        android:id="@+id/cusItemQunatity"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CusItemName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="71dp"
        android:background="#A5A5A5"
        android:hint="Item Quantity"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black">

    </EditText>

    <EditText
        android:id="@+id/cusName"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cusItemQunatity"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="71dp"
        android:background="#A5A5A5"
        android:hint="Customer Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black">

    </EditText>

    <EditText
        android:id="@+id/cusEmail"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cusName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="71dp"
        android:background="#A5A5A5"
        android:hint="Customer Email"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black">

    </EditText>

    <EditText
        android:id="@+id/cusDate"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cusEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="71dp"
        android:background="#A5A5A5"
        android:hint="Customer Date"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black">

    </EditText>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:text="Enter other details and make order.."
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="169dp"
        android:text="Comfirm Order"
        android:textColor="@color/white"
        android:textSize="20sp" />
</RelativeLayout>